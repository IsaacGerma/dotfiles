# set up previewer, provided by ctpv-git from the AUR
set previewer ctpv
set cleaner ctpvclear
&ctpv -s $id
&ctpvquit $id

set preview true
set hidden false
set drawbox true


cmd open ${{
	case $(file --mime-type "$f" -bL) in
		text/*) $EDITOR "$f";;
		inode/x-empty) $EDITOR "$f";;
		application/pdf) setsid -f zathura "$f";;
		*) setsid -f xdg-open "$f" ;;
	esac
}}
